{
  "name": "calculadora-isr",
  "version": "1.0.0",
  "type": "module",
  "description": "Calculadora completa de ISR (Impuesto Sobre la Renta) mexicano con tarifas actualizadas",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "microbundle --no-compress",
    "build:prod": "microbundle",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint && npm run build:prod"
  },
  "keywords": [
    "mexico",
    "mexican",
    "mx",
    "isr",
    "impuesto",
    "renta",
    "tax",
    "calculator",
    "fiscal",
    "sat",
    "tarifa",
    "nomina"
  ],
  "author": {
    "name": "Gerardo Lucero",
    "email": "tu-email@ejemplo.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GerardoLucero/calculadora-isr.git"
  },
  "bugs": {
    "url": "https://github.com/GerardoLucero/calculadora-isr/issues"
  },
  "homepage": "https://github.com/GerardoLucero/calculadora-isr#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@eslint/js": "^8.57.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "microbundle": "^0.15.1"
  },
  "dependencies": {
    "dayjs": "^1.11.18"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
